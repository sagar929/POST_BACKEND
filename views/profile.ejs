<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Profile</title>
</head>
<body class="bg-zinc-900 min-h-screen flex items-center justify-center px-4">
  <div class="bg-zinc-800 p-8 rounded-2xl shadow-2xl w-full max-w-xl relative">

    <!-- Logout -->
    <a href="/logout" class="absolute top-4 right-4 text-sm text-zinc-300 hover:text-red-500">Logout</a>

    <!-- Greeting -->
    <h2 class="text-3xl font-bold text-white text-center mb-1">
      Hello, <%= user.name %> ðŸ‘‹
    </h2>
    <p class="text-zinc-400 text-center mb-6">you can create a new post.</p>

    <!-- Create Post Form -->
    <form action="/createpost" method="POST" class="space-y-4 mb-8">
      <textarea
        name="content"
        rows="4"
        class="w-full resize-none bg-zinc-700 text-white border border-zinc-600 rounded-lg p-4 focus:outline-none focus:ring-2 focus:ring-indigo-500 placeholder-zinc-400"
        placeholder="What's on your mind?"
        required
      ></textarea>
      <button
        type="submit"
        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200"
      >
        Create New Post
      </button>
    </form>

    <!-- User Posts -->
    <div class="text-white">
      <h3 class="text-lg font-semibold mb-4 text-zinc-300">Your Posts:</h3>
      <% user.posts.forEach(post => { %>
        <div class="bg-zinc-700 p-4 rounded-lg mb-4 shadow-md">
          <p class="text-indigo-400 text-sm mb-2">@<%= user.username %></p>
          <p class="text-zinc-100 mb-3"><%= post.content %></p>
          <div class="flex space-x-4 text-sm text-zinc-400">
            <a href="#" class="hover:text-blue-400 transition">Like</a>
            <a href="/edit/<%= post._id %>" class="hover:text-yellow-400 transition">Edit</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
